@model PortfolioProject.Models.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Deneyim Girişi</h2>
<form method="post">
    @Html.HiddenFor(x => x.AboutId, new { @class = "form-control"})

    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Detail, 5, 0, new { @class = "form-control" })
    <br />
    <label>Fotoğraf Bağlantısı</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
