@model PortfolioProject.Models.SocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Updatye</h2>

<form method="post">
    @Html.HiddenFor(x => x.SocialMediaId)
    <label>Sosyal Medya Adı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control text-warning" })
    <br />
    <label>Sosyal Medya Bağlantısı</label>
    @Html.TextBoxFor(x => x.SocialMediaUrl, new { @class = "form-control text-info", placeholder = "https://instagram.com/username" })
    <br />
    <button class="btn btn-info">Sosyal Medya Hesabını Ekle</button>
</form>