@model PortfolioProject.Models.Skill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4 alert alert-success">Yetenek Güncelle</h2>
<form method="post">
    @Html.HiddenFor(x => x.SkillId)
    <label>Yetenek Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Title, "", new { @style = "color: red;" })
    <br />
    <label>Yetenek Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control text-warning" })
    @Html.ValidationMessageFor(x => x.Icon, "", new { @style = "color: red;", placeholder = "fab fa-android fa-3x" })
    <br />
    <label>Yetenek Değeri</label>
    @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Value, "", new { @style = "color: red;" })
    <br />
    <button class="btn btn-success">Yeteneği Güncelle</button>
</form>


