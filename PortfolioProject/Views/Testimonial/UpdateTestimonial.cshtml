@model PortfolioProject.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Referans Güncelle</h2>
<form method="post">
    @Html.HiddenFor(x => x.TestimonialId)
    <label>İsim Soyisim</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Yorum</label>
    @Html.TextAreaFor(x => x.Comment,4,0, new { @class = "form-control" })
    <br />
    <label>Fotoğraf Bağlantısı | 100-100px</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control text-info", placeholder = "https://i.hizliresim.com/resim.jpg" })
    <br />
    <button class="btn btn-info">Referansı Güncelle</button>
</form>