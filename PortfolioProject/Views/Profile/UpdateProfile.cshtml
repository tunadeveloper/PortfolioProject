@model PortfolioProject.Models.Profile
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4 alert alert-success">Profilim</h2>

<form method="post">

    @Html.HiddenFor(x => x.ProfileId)

    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Title, "", new { @style = "color: red;" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 5, 0, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color: red;" })
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Address, "", new { @style = "color: red;" })
    <br />
    <label>Telefon Numarası</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @style = "color: red;" })
    <br />
    <label>E-Posta Adresi</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color: red;" })
    <br />
    <label>CV İndirme Bağlantısı</label>
    @Html.TextBoxFor(x => x.Cv, new { @class = "form-control text-info" })
    <br />
    <label>Github Profil Bağlantısı</label>
    @Html.TextBoxFor(x => x.Github, new { @class = "form-control text-info" })
    @Html.ValidationMessageFor(x => x.Github, "", new { @style = "color: red;" })
    <br />
    <label>Görsel Bağlantısı</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control text-info" })
    <br />
    @if (Model != null && !string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Url.Content(Model.ImageUrl)" alt="Profile Image" style="max-width: 200px;" />
    }


    <br />
    <br />
    <label>Harita Bağlantısı</label>
    @Html.TextBoxFor(x => x.MapLocation, new { @class = "form-control text-info" })
    <br />

    <button class="btn btn-success">Profili Güncelle</button>
</form>